{
    "version": 2,
    "regions": [
        "sin1"
    ],
    "builds": [
        {
            "src": "src/vercel.ts",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "src/i18n/**"
                ]
            }
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "src/vercel.ts"
        },
        {
            "source": "/(.*)",
            "destination": "src/vercel.ts"
        }
    ],
    "headers": [
        {
            "source": "/api/(.*)",
            "headers": [
                {
                    "key": "Access-Control-Allow-Credentials",
                    "value": "true"
                },
                {
                    "key": "Access-Control-Allow-Origin",
                    "value": "https://nhatroso.vercel.app"
                },
                {
                    "key": "Access-Control-Allow-Methods",
                    "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT"
                },
                {
                    "key": "Access-Control-Allow-Headers",
                    "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version, Authorization, x-lang"
                }
            ]
        }
    ]
}